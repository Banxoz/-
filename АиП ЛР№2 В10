#include <iostream>
using namespace std;

struct list
{
    int field; // поле данных
    struct list* next; // указатель на следующий элемент
    struct list* prev; // указатель на предыдущий элемент
};

// Функция для создания нового узла
struct list* create(int value) {
    struct list* newNode = new list;
    newNode->field = value;
    newNode->next = 0;
    newNode->prev = 0;
    return newNode;
}

// Функция для добавления узла в конец списка
void append(struct list** head, int value) {
    struct list* newNode = create(value);
    if (*head == 0) {
        *head = newNode;
        return;
    }
    struct list* last = *head;
    while (last->next != 0) {
        last = last->next;
    }
    last->next = newNode;
    newNode->prev = last;
}

// Функция для вывода списка
void print(struct list* head) {
    struct list* current = head;
    while (current != 0) {
        cout << current->field << " ";
        current = current->next;
    }
    cout << endl;
}

// Функция для обмена двух узлов
struct list* swap(struct list* lst1, struct list* lst2, struct list* head) {
    if (lst1 == lst2) return head;

    struct list* prev1, * prev2, * next1, * next2;
    prev1 = lst1->prev; // узел предшествующий lst1
    prev2 = lst2->prev; // узел предшествующий lst2
    next1 = lst1->next; // узел следующий за lst1
    next2 = lst2->next; // узел следующий за lst2

    if (lst2 == next1) { // обмениваются соседние узлы
        lst2->next = lst1;
        lst2->prev = prev1;
        lst1->next = next2;
        lst1->prev = lst2;

        if (next2 != 0)
            next2->prev = lst1;
        if (prev1 != 0)
            prev1->next = lst2;
    }
    else if (lst1 == next2) { // обмениваются соседние узлы (обратный порядок)
        lst1->next = lst2;
        lst1->prev = prev2;
        lst2->next = next1;
        lst2->prev = lst1;

        if (next1 != 0)
            next1->prev = lst2;
        if (prev2 != 0)
            prev2->next = lst1;
    }
    else { // обмениваются несоседние узлы
        lst1->next = next2;
        if (next2 != 0)
            next2->prev = lst1;
        lst2->next = next1;
        if (next1 != 0)
            next1->prev = lst2;

        lst1->prev = prev2;
        if (prev2 != 0)
            prev2->next = lst1;
        lst2->prev = prev1;
        if (prev1 != 0)
            prev1->next = lst2;
    }

    // Возвращаем новый head, если один из узлов был head
    if (lst1 == head)
        return lst2;
    else if (lst2 == head)
        return lst1;
    else
        return head;
}

int main() {

    struct list* head = 0;

    // Создаем список с 5 элементами (1, 2, 3, 4, 5)
    for (int i = 1; i <= 5; i++) {
        append(&head, i);
    }

    cout << " Original list: ";
    print(head);

    // Yзлы для обмена 
    struct list* nemei = head->next;
    struct list* nemeii = head->next->next->next;

    cout << " Exchanging nodes " << nemei->field << " and " << nemeii->field << endl;

    head = swap(nemei, nemeii, head);

    cout << " The list after the exchange: ";
    print(head);

    // Освобождение памяти
    while (head != 0) {
        struct list* temp = head;
        head = head->next;
        delete temp;
    }

    return 0;
}
