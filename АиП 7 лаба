//Общее задание
#include <iostream>
#include <Windows.h> 
using namespace std;
void bub(int* arr, int size) {
    for (int i = 0; i < size - 1; ++i) {
        bool flag = false;
        for (int j = 0; j < size - i - 1; ++j) {
            if (arr[j] > arr[j + 1]) {
                swap(arr[j], arr[j + 1]);
                flag = true;
            }
        }
        if (!flag) break;
    }
}
int del3(const int* arr, int size) {
    int cout = 0;
    for (int i = 0; i < size; ++i) {
        if (arr[i] % 3 == 0) ++cout;
    }
    return cout;
}
int* minotr(int* arr, int size) {
    int* otr = nullptr;

    for (int i = 0; i < size; ++i) {
        if (arr[i] < 0) { 
            if (otr == nullptr || arr[i] < *otr) {
                otr = &arr[i];
            }
        }
    }

    return otr;
}

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    int size;
    cout << "Введите размер массива: ";
    cin >> size;

    int* arr = new int[size];

    cout << "Введите элементы массива:\n";
    for (int i = 0; i < size; ++i) {
        cin >> arr[i];
    }

    bub(arr, size);

    cout << "Отсортированный массив:\n";
    for (int i = 0; i < size; ++i) {
        cout << arr[i] << " ";
    }
    cout << "\n";

    int nemei = del3(arr, size);
    cout << "Количество элементов, кратных 3: " << nemei << "\n";
    int* mineg = minotr(arr, size);
    if (mineg != nullptr) {
        cout << "Минимальный отрицательный элемент: " << *mineg
            << " (находится по адресу: " << mineg << ")\n";
    }
    else {
        cout << "В массиве нет отрицательных элементов.\n";
    }
    delete[] arr;
    return 0;
}
#include <iostream>
#include <random>
#include <iomanip>
#include <Windows.h> 
using namespace std;

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int M, N, K1, K2;

    // Ввод размеров матрицы и номеров столбцов
    cout << "Введите количество строк M: ";
    cin >> M;
    cout << "Введите количество столбцов N: ";
    cin >> N;
    cout << "Введите номера столбцов K1 и K2 (1 <= K1 < K2 <= N): ";
    cin >> K1 >> K2;

    // Проверка корректности ввода
    if (K1 < 1 || K2 > N || K1 >= K2) {
        cerr << "Ошибка: неверные номера столбцов!" << endl;
        return 1;
    }

    // Создание динамического массива
    int** matrix = new int* [M];
    for (int i = 0; i < M; ++i) {
        matrix[i] = new int[N];
    }

    // Инициализация генератора случайных чисел
    random_device rd;
    mt19937 gen(rd());
    uniform_int_distribution<> dis(1, 100);

    // Заполнение матрицы случайными числами
    for (int i = 0; i < M; ++i) {
        for (int j = 0; j < N; ++j) {
            matrix[i][j] = dis(gen);
        }
    }

    // Вывод исходной матрицы
    cout << "\nИсходная матрица:\n";
    for (int i = 0; i < M; ++i) {
        for (int j = 0; j < N; ++j) {
            cout << setw(4) << matrix[i][j];
        }
        cout << endl;
    }

    // Обмен столбцов K1 и K2 (индексы начинаются с 0)
    for (int i = 0; i < M; ++i) {
        swap(matrix[i][K1 - 1], matrix[i][K2 - 1]);
    }

    // Вывод измененной матрицы
    cout << "\nМатрица после обмена столбцов " << K1 << " и " << K2 << ":\n";
    for (int i = 0; i < M; ++i) {
        for (int j = 0; j < N; ++j) {
            cout << setw(4) << matrix[i][j];
        }
        cout << endl;
    }

    // Освобождение памяти
    for (int i = 0; i < M; ++i) {
        delete[] matrix[i];
    }
    delete[] matrix;

    return 0;
}
