#include <iostream>
#include <string>
#include <Windows.h>
using namespace std;

string nemei(string str) {
    string punctuation = ".,;!?—:()";
    string result;
    for (char c : str) {  
        if (punctuation.find(c) == -1) {
            result += c;
        }
    }
    return result;
}

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    cout << "Введите строку ";
    string input;
    getline(cin, input);
    string cleaned = nemei(input);
    cout << "Строка без знаков пунктуации: " << cleaned << endl;


    return 0;
}
