//Задание Б
#include <iostream>
#include <Windows.h>
using namespace std;

struct student {
    double score;
};

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    const int SIZE = 5; 
    student stud[SIZE];
    student* istud = stud;
    cout << "Введите средний балл для каждого студента:" << endl;
    for (int i = 0; i < SIZE; ++i) {
        cout << "Студент " << i + 1 << ": ";
        cin >> (istud + i)->score;
    }

    for (int i = 0; i < SIZE - 1; ++i) {
        int minIndex = i;
        for (int j = i + 1; j < SIZE; ++j) {
            if ((istud + j)->score < (istud + minIndex)->score) {
                minIndex = j;
            }
        }
        if (minIndex != i) {
            swap((istud + i)->score, (istud + minIndex)->score); 
        }
    }

    // Вывод отсортированного массива
    cout << "Отсортированный список студентов по среднему баллу:" << endl;
    for (int i = 0; i < SIZE; ++i) {
        cout << "Студент " << i + 1 << ": " << (istud + i )->score << endl;
    }
    return 0;
}
