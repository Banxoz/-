//Задание А
#include <iostream>
using namespace std;
int main() {
    const char* arr1[5] = { "C++", "one", "the", "most", "programming" };
    const char* arr2[5] = { "is", "of", "world's", "popular", "languages" };
    const int lengths1[5] = { 3, 3, 3, 4, 11 };
    const int lengths2[5] = { 2, 2, 7, 7, 9 };

    char result[100] = {};

    // УКАЗАТЕЛИ
    const char** ptr1 = arr1;
    const char** ptr2 = arr2;
    const int* len1 = lengths1;
    const int* len2 = lengths2;
    char* res_ptr = result;

    // Объединение строк 
    for (int i = 0; i < 5; i++) {
        for (int j = 0; j < *len1; j++) {
            *res_ptr++ = *((*ptr1)+j);
        }
        *res_ptr++ = ' ';
        for (int j = 0; j < *len2; j++) {
            *res_ptr++ = *((*ptr2) + j);
        }
        if (i < 4) {
            *res_ptr++ = ' ';
        }
        ptr1++;
        ptr2++;
        len1++;
        len2++;
    }
    for (char* p = result; p < res_ptr; p++) {
        cout << *p;
    }
    cout << endl;
    return 0;
}
//Задание Б
#include <iostream>
#include <Windows.h>
using namespace std;

struct student {
    float score;
};
void sort(student* students, int size) {
    for (int i = 0; i < size - 1; ++i) {
        int minIndex = i;
        for (int j = i + 1; j < size; ++j) {
            if ((*(students + j)).score < (*(students + minIndex)).score) {
                minIndex = j;
            }
        }
        if (minIndex != i) {
            swap(*(students + i), *(students + minIndex));
        }
    }
}
void print(const student* students, int size) {
    for (int i = 0; i < size; ++i) {
        cout << "Студент " << i + 1 << ": " << (*(students + i)).score << endl;
    }
}

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    const int SIZE = 5;
    student stud[SIZE];
    student* istud = stud;

    cout << "Введите средний балл для каждого студента:" << endl;
    for (int i = 0; i < SIZE; ++i) {
        cout << "Студент " << i + 1 << ": ";
        cin >> (istud + i)->score;
    }

    // Сортировка массива студентов по среднему баллу
    sort(istud, SIZE);

    // Вывод отсортированного массива
    cout << "Отсортированный список студентов по среднему баллу:" << endl;
    print(istud, SIZE);

    return 0;
}
